<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="ContentUpdate.FirstPage">
	<ContentPage.Content>
		<StackLayout Orientation="Vertical" Padding="40">
			<StackLayout>
				<Label Text="Channel name: " TextColor="Green"/>
				<Entry x:Name="ChannelNameEntry" Text="Noam" WidthRequest="100"/>
			</StackLayout>
			<StackLayout>
				<Label Text="Title number: " TextColor="Green"/>
				<Entry x:Name="TitleNumberEntry" Text="397" WidthRequest="100"/>
			</StackLayout>
			<StackLayout IsVisible="false">
				<Label Text="Server URL: " TextColor="Green"/>
				<Entry x:Name="ServerUrlEntry" Text="ftp://waws-prod-am2-019.ftp.azurewebsites.windows.net/site/wwwroot" WidthRequest="100"/>
			</StackLayout>
			<StackLayout IsVisible="false">
				<Label Text="File name: " TextColor="Green"/>
				<Entry x:Name="FileNameEntry" Text="noam.txt" WidthRequest="100"/>	
			</StackLayout>
			<StackLayout IsVisible="false">
				<Label Text="User name: " TextColor="Green"/>
				<Entry x:Name="UserNameEntry" Text="RumblePhoneBook\ofeknoam83" WidthRequest="100"/>
			</StackLayout>
			<StackLayout IsVisible="false">
				<Label Text="Password: " TextColor="Green"/>
				<Entry x:Name="PasswordEntry" Text="Furile30" WidthRequest="100"/>
			</StackLayout>

			<StackLayout Orientation="Horizontal" HorizontalOptions="Fill">
				<Button Text="Create" Clicked="OnCreateChannelClicked" HorizontalOptions="CenterAndExpand"/>
				<Button Text="Add" Clicked="OnAddItemClicked" HorizontalOptions="CenterAndExpand"/>
				<Button Text="Remove" Clicked="OnRemovedFirstItemClicked" HorizontalOptions="CenterAndExpand"/>
			</StackLayout>


			<Label x:Name="StatusLable" HorizontalOptions="Center"/>
		</StackLayout> 
	</ContentPage.Content>
</ContentPage>
